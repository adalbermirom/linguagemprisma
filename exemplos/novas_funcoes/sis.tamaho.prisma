imprima('sizeof int', sis.tamanho('%i')); //o tamanho de um int;
imprima('sizeof int',sis.tamanho('%d')); //mesmo que o de cima;
imprima('sizeof unsigned int', sis.tamanho('%u')); //unsigned int;
imprima('sizeof long int', sis.tamanho('%ld')); //long
imprima('sizeof long long int', sis.tamanho('%lld')); //long long int;
imprima('sizeof long unsigned', sis.tamanho('%lu')); //unsigned long;
imprima('sizeof long long unsigned', sis.tamanho('%llu')); //long long unsigned
imprima('sizeof short ', sis.tamanho('%hi')); //signed short integer
imprima('sizeof short unsigned', sis.tamanho('%hu')); //unsigned short int;
imprima('sizeof floag', sis.tamanho('%f')); //float
imprima('sizeof double', sis.tamanho('%lf')); //double;
imprima('sizeof long double', sis.tamanho('%Lf')); //long double;
imprima('sizeof pointer *', sis.tamanho('%p')); //sizeof de um ponteiro (void*)
imprima('sizeof char', sis.tamanho('%c')); //sizeof de um caractere: 1;

/* as opções %be e %le retorna verdadeiro ou falso conforme o sistema for big-endian ou little-endian */
se sis.tamanho'%be' entao
    imprima('sistema big-endian');
senao
    imprima('sistema little-endian');
fim

