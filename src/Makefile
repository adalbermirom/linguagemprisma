 ltm.h lzio.h lmem.h ldo.h lgc.h
loadlib.o: loadlib.c prisma.h prismaconf.h lauxlib.h prismalib.h
lobject.o: lobject.c prisma.h prismaconf.h lctype.h llimits.h ldebug.h lstate.h \
 lobject.h ltm.h lzio.h lmem.h ldo.h lstring.h lgc.h lvm.h
lopcodes.o: lopcodes.c lopcodes.h llimits.h prisma.h prismaconf.h
loslib.o: loslib.c prisma.h prismaconf.h lauxlib.h prismalib.h
lparser.o: lparser.c prisma.h prismaconf.h lcode.h llex.h lobject.h llimits.h \
 lzio.h lmem.h lopcodes.h lparser.h ldebug.h lstate.h ltm.h ldo.h lfunc.h \
 lstring.h lgc.h ltable.h
lstate.o: lstate.c prisma.h prismaconf.h lapi.h llimits.h lstate.h lobject.h \
 ltm.h lzio.h lmem.h ldebug.h ldo.h lfunc.h lgc.h llex.h lstring.h \
 ltable.h
lstring.o: lstring.c prisma.h prismaconf.h lmem.h llimits.h lobject.h lstate.h \
 ltm.h lzio.h lstring.h lgc.h
lstrlib.o: lstrlib.c prisma.h prismaconf.h lauxlib.h prismalib.h
lutf8lib.o: lutf8lib.c prisma.h prismaconf.h lauxlib.h prismalib.h lutf8lib_unidata.h
ltable.o: ltable.c prisma.h prismaconf.h ldebug.h lstate.h lobject.h llimits.h \
