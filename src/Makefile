 lzio.h lmem.h lundump.h
lfunc.o: lfunc.c prisma.h prismaconf.h lfunc.h lobject.h llimits.h lgc.h \
 lstate.h ltm.h lzio.h lmem.h
lgc.o: lgc.c prisma.h prismaconf.h ldebug.h lstate.h lobject.h llimits.h ltm.h \
 lzio.h lmem.h ldo.h lfunc.h lgc.h lstring.h ltable.h
linit.o: linit.c prisma.h prismaconf.h prismalib.h lauxlib.h
liolib.o: liolib.c prisma.h prismaconf.h lauxlib.h prismalib.h
llex.o: llex.c prisma.h prismaconf.h lctype.h llimits.h ldo.h lobject.h \
 lstate.h ltm.h lzio.h lmem.h llex.h lparser.h lstring.h lgc.h ltable.h
